<yas>
    <scene root="root" axis_length="5" />

    <views default="perp1">
        <!-- tem de existir, pelo menos, uma vista de -->
        <!-- entre as seguintes (perspective ou ortho) -->
        <perspective id="perp1" near="0.1" far="500" angle="30">
            <from x="10" y="30" z="15" />
            <to x="1" y="1" z="2" />
        </perspective>
        <ortho id="ortho1" near="0.2" far="300" left="5" right="2" top="1" bottom="0.5" />
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ambient>

    <lights>
        <!-- Deve existir um ou mais blocos "omni" ou "spot" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <omni id="light1" enabled="0">
            <location x="10.0" y="10.0" z="10.0" w="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <spot id="light2" enabled="0" angle="30.0" exponent="2.0">
            <!-- atencao, "target" e' diferente de "direction" -->
            <location x="20.0" y="20.0" z="20.0" w="0.5" />
            <target x="15.0" y="-10.0" z="6.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </spot>
    </lights>

    <textures>
        <texture id="trunk" file="images/trunk-image.jpg" />
        <texture id="leafs" file="images/leaves.jpg" />
        <texture id="rock" file="images/rocks.jpg" />
    </textures>

    <materials>
        <material id="defaultMaterial" shininess = "10.0">
            <emission r="0.0" g="0.0" b="0.0" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1" />
            <specular r="0.5" g="0.5" b="0.5" a="1" />
        </material>
    </materials>

    <transformations>
        <transformation id="CylinderToTree">
            <scale x="1.0" y="1.0" z="2.0" />
            <rotate axis="x" angle="90" />
        </transformation>
        <transformation id="SphereToTree">
            <translate x="0.0" y="2.0" z="0.0"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="treeCylinder">
            <cylinder base="300" top="300" height="30" slices="300" stacks="50" />
        </primitive >
        <primitive id="spheretreetop">
            <sphere radius="10" slices="50" stacks="30"/>
        </primitive>
    </primitives >

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="tree" />
                <componentref id="treebush" />
            </children>
        </component>
        <component id="tree">
            <transformation>
                <translate x="5" y="0" z="5" />
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="null" />
            <children>
                <componentref id="treeTrunk" />
                <componentref id="treeTop" />
            </children>
        </component>
        <component id="treebush">
            <transformation>
                <translate x="5" y="0" z="5" />
                <tranformationref id="SphereToTree"/>
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="null" />
            <children>
                <primitiveref id="spheretreetop" />
            </children>
        </component>
    </components>
</yas>
